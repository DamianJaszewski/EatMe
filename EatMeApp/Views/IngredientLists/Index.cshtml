@model IEnumerable<EatMeApp.Models.IngredientLists>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IgredientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IgredientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measure.MeasureId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IngredientListsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IngredientListsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IngredientListsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
